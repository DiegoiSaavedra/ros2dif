<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd"
            schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <!-- Información básica -->
  <name>robot_base</name>
  <version>0.0.0</version>
  <description>Nodo Python que gestiona la base diferencial y publica odometría.</description>
  <maintainer email="diego@todo.todo">diego</maintainer>
  <license>Apache-2.0</license>

  <!-- Dependencias de ejecución (runtime) -->
  <exec_depend>rclpy</exec_depend>
  <exec_depend>geometry_msgs</exec_depend>
  <exec_depend>nav_msgs</exec_depend>
  <exec_depend>tf_transformations</exec_depend>

  <!-- Dependencias de test que ya estaban en la plantilla -->
  <test_depend>ament_copyright</test_depend>
  <test_depend>ament_flake8</test_depend>
  <test_depend>ament_pep257</test_depend>
  <test_depend>python3-pytest</test_depend>

  <!-- Exportación del tipo de build (ament_python) -->
  <export>
    <build_type>ament_python</build_type>
  </export>
</package>

